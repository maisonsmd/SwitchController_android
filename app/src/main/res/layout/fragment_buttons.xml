<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ButtonsFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewDeviceTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="-00:00:00"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/textView5"
            app:layout_constraintVertical_bias="0.6" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="12dp"
            android:text="Thời gian thiết bị:"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewDeviceName4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TB 4"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnToggle4"
            app:layout_constraintEnd_toEndOf="@+id/textViewDeviceName3"
            app:layout_constraintTop_toTopOf="@+id/btnToggle4" />

        <ToggleButton
            android:id="@+id/btnToggle4"
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:text="ToggleButton"
            app:layout_constraintStart_toStartOf="@+id/btnToggle3"
            app:layout_constraintTop_toBottomOf="@+id/btnToggle3" />

        <TextView
            android:id="@+id/textViewDeviceName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TB 3"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnToggle3"
            app:layout_constraintEnd_toEndOf="@+id/textViewDeviceName2"
            app:layout_constraintTop_toTopOf="@+id/btnToggle3" />

        <ToggleButton
            android:id="@+id/btnToggle3"
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:text="ToggleButton"
            app:layout_constraintStart_toStartOf="@+id/btnToggle2"
            app:layout_constraintTop_toBottomOf="@+id/btnToggle2" />

        <TextView
            android:id="@+id/textViewDeviceName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TB 2"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnToggle2"
            app:layout_constraintEnd_toEndOf="@+id/textViewDeviceName1"
            app:layout_constraintTop_toTopOf="@+id/btnToggle2" />

        <ToggleButton
            android:id="@+id/btnToggle2"
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:text="ToggleButton"
            app:layout_constraintStart_toStartOf="@+id/btnToggle1"
            app:layout_constraintTop_toBottomOf="@+id/btnToggle1" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginEnd="180dp"
            android:orientation="vertical"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_begin="180dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewDeviceName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:text="TB 1"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnToggle1"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/btnToggle1" />

        <ToggleButton
            android:id="@+id/btnToggle1"
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="ToggleButton"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/textViewTemperature" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:text="Nhiệt độ:"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textViewTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="0 *C"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textViewDeviceTime"
            app:layout_constraintTop_toTopOf="@+id/textView"
            app:layout_constraintVertical_bias="0.0" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>